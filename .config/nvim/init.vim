syntax on
colorscheme molokai
set number
set relativenumber
set showcmd
set cursorline
filetype indent on
set wildmenu
set lazyredraw
set showmatch
" search funtionality
set incsearch
set hlsearch

" code folding
set foldenable
set foldlevelstart=10
nnoremap <space> za
"set foldmethod=indent

" Movement key bindings
nnoremap j gj
nnoremap k gk

set scrolloff=6 " keep 6 line above and below the cursor
